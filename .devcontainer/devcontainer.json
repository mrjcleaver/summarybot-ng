{
  "image": "mcr.microsoft.com/devcontainers/base:debian",
  "runArgs": [
    "--privileged"
  ],
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/stuartleeks/dev-container-features/shell-history:0": {},
    "ghcr.io/EliiseS/devcontainer-features/bash-profile:1": {
        "command": "alias cfa='npx claude-flow@alpha'" 
    }
  },
  "postCreateCommand": "npm install -g @anthropic-ai/claude-code && claude doctor",
  "postStartCommand": "bash -c 'if ! claude doctor >/dev/null 2>&1; then echo \"⚠️  Claude not authenticated. Run \\\"claude login\\\" or set ANTHROPIC_API_KEY.\"; else echo OK; fi'",

  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "rooveterinaryinc.roo-cline",
        "vsls-contrib.gistfs",
        "github.copilot",
        "github.copilot-chat",
        "bierner.markdown-mermaid"
      ]
    }
  },
  "shutdownAction": "none"
}
