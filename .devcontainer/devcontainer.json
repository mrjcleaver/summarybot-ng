{
  "build": { "dockerfile": "Dockerfile" },

  "runArgs": [],
  "remoteUser": "vscode",

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/stuartleeks/dev-container-features/shell-history:0": {},
    "ghcr.io/EliiseS/devcontainer-features/bash-profile:1": {
      "command": "alias cfa='npx claude-flow@alpha' && alias dsp='claude --dangerously-skip-permissions'"
    },
    "ghcr.io/itsmechlark/features/1password:1.5.0": {},
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },

  "containerEnv": {
    "POETRY_VIRTUALENVS_IN_PROJECT": "true"
  },

  "postCreateCommand": [
    "export PATH=\"$HOME/.local/bin:$PATH\"",
    "if command -v poetry >/dev/null 2>&1; then pipx upgrade poetry || true; else pipx install poetry; fi",
    "poetry env use \"$(command -v python)\" || true",
    "poetry install"
],
  "postStartCommand": "bash -lc 'if [ -n \"$ANTHROPIC_API_KEY\" ]; then echo \"Claude key present\"; else echo \"âš  Set ANTHROPIC_API_KEY or run claude login\"; fi'",

  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "rooveterinaryinc.roo-cline",
        "vsls-contrib.gistfs",
        "github.copilot",
        "github.copilot-chat",
        "bierner.markdown-mermaid"
      ]
    }
  },

  "shutdownAction": "none"
}
