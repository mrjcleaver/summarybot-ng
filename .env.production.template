# Production Environment Configuration Template
# Copy this to .env.production and fill in actual values
# NEVER commit .env.production to version control!

# =============================================================================
# REQUIRED: Discord Bot Configuration
# =============================================================================
DISCORD_TOKEN=

# =============================================================================
# REQUIRED: AI Provider Configuration (Production uses OpenRouter)
# =============================================================================
LLM_ROUTE=openrouter
OPENROUTER_API_KEY=
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# =============================================================================
# Database Configuration
# =============================================================================
# For production, use PostgreSQL or keep SQLite with persistent volume
DATABASE_URL=sqlite:///data/summarybot.db
# DATABASE_URL=postgresql://user:password@host:5432/summarybot

# =============================================================================
# Cache Configuration (Production uses Redis)
# =============================================================================
CACHE_BACKEND=redis
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE=1000
REDIS_URL=redis://redis:6379/0

# =============================================================================
# Webhook API Configuration
# =============================================================================
WEBHOOK_ENABLED=true
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=5000
WEBHOOK_RATE_LIMIT=100
WEBHOOK_CORS_ORIGINS=https://yourdomain.com

# =============================================================================
# Application Configuration
# =============================================================================
LOG_LEVEL=INFO
MAX_MESSAGE_BATCH=10000
CACHE_TTL=3600

# =============================================================================
# Monitoring & Observability (Optional)
# =============================================================================
# SENTRY_DSN=
# DATADOG_API_KEY=
# NEW_RELIC_LICENSE_KEY=

# =============================================================================
# Production Security
# =============================================================================
# Rotate these keys regularly
# Use secrets manager in production (AWS Secrets Manager, etc.)

# =============================================================================

  DISCORD_CLIENT_ID=your_app_client_id                                                                 
  DISCORD_CLIENT_SECRET=your_app_client_secret                                                         
  DISCORD_REDIRECT_URI=http://localhost:3000/callback                                                  
                                                                                                       
  # Dashboard Security                                                                                 
  DASHBOARD_JWT_SECRET=generate_a_random_32_byte_string                                                
  DASHBOARD_ENCRYPTION_KEY=generate_fernet_key    